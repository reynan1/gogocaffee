<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("./partials/head") -%>
    <title>Welcome My Admin</title>
</head>

<body>
  <!-- container box -->

  <div class="container">
    <!-- admin -->
    <div class="admin">
      <!-- aside -->
      <aside class="admin__aside">
        <div class="admin__top">
          <div class="admin__top-logo">
            <span>
              <a href="#" class="admin__top-logo--title" alt="logo-name">
                Gogo Caffee</a>
            </span>
          </div>
          <div class="admin__top-close">
            <span class="material-icons-sharp"> close </span>
          </div>
        </div>
        <div class="admin__sidebar u-margin-top-medium">
          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              dashboard
            </span>
            <h3 class="admin__sidebar-header">Dashboard</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              person
            </span>
            <h3 class="admin__sidebar-header">Customer</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              receipt_long
            </span>
            <h3 class="admin__sidebar-header">Orders</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              insights
            </span>
            <h3 class="admin__sidebar-header">Analytics</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              mail_outline
            </span>
            <h3 class="admin__sidebar-header">Message</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              inventory
            </span>
            <h3 class="admin__sidebar-header">Products</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              report
            </span>
            <h3 class="admin__sidebar-header">Reports</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              settings
            </span>
            <h3 class="admin__sidebar-header">Setting</h3>
          </a>

          <a href="#" class="admin__sidebar-link">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              add
            </span>
            <h3 class="admin__sidebar-header">Add Product</h3>
          </a>

          <a href="#" class="admin__sidebar-link u-margin-top-huge">
            <span class="material-icons-sharp admin__sidebar-link--icon">
              logout
            </span>
            <h3 class="admin__sidebar-header">Logout</h3>
          </a>
        </div>
      </aside>
      <!-- end of aside -->

      <!-- center -->
      <div class="admin__center">
        <div class="admin__register">
          <a href=" " class="admin__register--btn">Customer</a>
        </div>
        <!-- register table -->
        <div class="admin__register-data">
          <h3 class="admin__register-data--text">Customer List</h3>
          <table class="admin__table u-margin-top-medium">
            <tr>
              <th>No.</th>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>Email</th>
              <th>Contact Number</th>
            </tr>
            <% i=0; %>
              <%data.forEach(element=> { console.log("testing data: " + element) %>
                <tr>
                  <td>
                    <span>
                      <%= i++ %>
                    </span>
                  </td>
                  <td>
                    <span>
                      <%=element.firstname %>
                    </span>
                  </td>
                  <td>
                    <span>
                      <%=element.lastname %>
                    </span>
                  </td>
                  <td>
                    <span>
                      <%=element.email %>
                    </span>
                  </td>
                  <td>
                    <span>
                      <%=element.mobile_number %>
                    </span>
                  </td>
                </tr>
                <% }) %>
          </table>
          <button type="button" class="admin__register-data--button u-margin-top-medium close-register">
            <span class="material-icons-sharp admin__register-data--icons">
              arrow_back
            </span>
          </button>
        </div>
        <!-- end register table -->
        <div class="admin__search">
          <a href=" " class="admin__register--btn">Search Customer</a>
        </div>

        <!-- search id -->
        <div class="admin__search-data">
          <h3 class="admin__search-data--text">Search Form ID</h3>
          <form action="" method="Get">
            <div class="admin__search-data--box u-margin-top-medium">
              <input type="text" class="admin__search-data--input" placeholder="...Enter Customer ID">
              <button class="admin__search-data--btn"><span
                  class="material-icons-sharp admin__search-data--icon">search</span></button>
            </div>
          </form>
          <button type="button" class="admin__search-data--button u-margin-top-medium close-search">
            <span class="material-icons-sharp admin__search-data--icons">
              arrow_back
            </span>
          </button>
        </div>
        <!-- end search id -->

      </div>
      <!-- end of center  -->
    </div>
    <!-- end of admin -->
  </div>

  <script src="../../public/js/customer.js"></script>
</body>

</html>